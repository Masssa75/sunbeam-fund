# Sunbeam Fund Management System - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Supabase Configuration (OPTIONAL - leave empty to use localStorage)
# The app will work without these, using localStorage as fallback
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_PROJECT_ID=
SUPABASE_ACCESS_TOKEN=

# External APIs
SCRAPERAPI_KEY=your_scraperapi_key_from_porta
GEMINI_API_KEY=your_gemini_api_key_from_porta
COINGECKO_API_KEY=your_coingecko_api_key_if_needed

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_investor_group_chat_id

# Cron Job
CRONJOB_API_KEY=your_cronjob_api_key_from_porta

# App Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development